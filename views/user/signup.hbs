<div class="container mt-5">
  <div class="row">

    <!-- Image -->
    <div class="col-lg-6 d-flex">
      <img src="/images/banner.jpg" class="img-fluid align-self-stretch" alt="Amazon Image">
    </div>
    
    <!-- Registration Form -->
    <div class="col-lg-6 d-flex">
      <div class="card bg-dark text-white w-100">
        <div class="card-body d-flex flex-column justify-content-center">
          <div>
            <h5 class="card-title">Registration</h5>
            <form action="/signup" method="post">
              <div class="mb-3">
                <input type="text" class="form-control" name="userName" placeholder="Your username here">
              </div>
              <div class="mb-3">
                <input type="email" class="form-control" name="userEmail" placeholder="Your email here">
              </div>
              <div class="mb-3">
                <input type="password" class="form-control" name="password" placeholder="Your password here">
              </div>
              <button type="submit" class="btn btn-warning">Register</button>
            </form>
          </div>
          <div class="mt-3">
            <p class="text-muted">Already have an account? <a href="#">Log in here</a></p>
          </div>
        </div>
      </div>
    </div>
    
    
  </div>
</div>
