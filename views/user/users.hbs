<div class="container mt-5">
    <div class="row justify-content-between" >
        {{#each products}}
        
        <div class="col-md-3 mb-3">
            <div class="card">
                <img src="/images/product-images/{{this._id}}.jpg" class="card-img-top" alt="Card Image">
                <div class="card-body">
                    <h5 class="card-title">{{this.itemName}}</h5>
                    <p class="card-text">{{this.itemDesc}}</p>
                    <p class="card-text">Price: â‚¹ {{this.itemPrice}} </p>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

